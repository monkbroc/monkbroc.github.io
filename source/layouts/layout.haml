!!!
%html
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %title= page_title
    %meta{:name => "description", :content => page_description}/
    %meta{:name => "keywords", :content => page_keywords}/
    %meta{:name => "author", :content => "Julien Vanier"}/
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0, minimum-scale=1.0"}/
    = stylesheet_link_tag 'all'
    / fonts
    %link{:href => "//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css", :rel => "stylesheet"}/
    %link{:href => "http://fonts.googleapis.com/css?family=Droid+Sans:400,700,Domine", :rel => "stylesheet", :type => "text/css"}/
    = partial 'layouts/social_profile'
    = yield_content :head
  %body
    = yield
    / Javascript
    %script{:src => "//ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"}
    = javascript_include_tag 'all'
    = partial 'layouts/google_analytics'
